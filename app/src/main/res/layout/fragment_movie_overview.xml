<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.delink.maxd.ui.MovieOverviewFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detail_top"
                android:background="@color/colorPrimary">

                <ImageView
                    android:id="@+id/details_backdrop"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/bg"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details_backdrop"
                    android:layout_margin="@dimen/activity_horizontal_margin">

                    <TextView
                        android:id="@+id/movie_detail_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/colorIcons"
                        android:textSize="24sp" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/movie_category"
                            android:layout_width="210dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorIcons"
                            android:textSize="16sp"
                            android:text=""/>
                        <TextView
                            android:id="@+id/movierating"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorIcons"
                            android:text="Working"/>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_top"
                android:layout_margin="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/movieOverView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""/>

                <TextView
                    android:id="@+id/dateRelease"
                    android:layout_below="@+id/movieOverView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:text=""/>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>
